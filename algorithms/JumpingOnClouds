class JumpingOnClouds {
	static int jumpingOnClouds(int[] c) {
		int jump=0;
		int currPosition =0;
		while(currPosition<c.length) {
			if(currPosition+2<c.length && c[currPosition+2]!=1) {
				currPosition=currPosition+2;
				jump++;
			}
			else if(currPosition+1<c.length && c[currPosition+1]!=1) {
				currPosition=currPosition+1;
				jump++;
			}
			else break;
		}
		return jump;
			
    }

	public static void main(String args[]) {
		int arr[] = {0 ,0, 1, 0, 0, 1, 0};
		System.out.println(jumpingOnClouds(arr));
	}
}
